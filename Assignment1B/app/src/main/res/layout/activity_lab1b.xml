<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mahappdev.caresilabs.com.assignment1b.Lab1bActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/tvName"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_alignEnd="@+id/tvPhone"
        android:layout_alignBottom="@+id/tfName"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tfName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvPhone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/tvPhone"
        android:textColor="@color/red"
        android:layout_below="@+id/tfName"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tfEmail"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfPhone"
        android:layout_below="@+id/tfName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvPhone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/tvEmail"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_alignBottom="@+id/tfEmail"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPhone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfEmail"
        android:layout_below="@+id/tfPhone"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seperator"
        android:id="@+id/tvSeperator"
        android:textColor="@color/orange"
        android:layout_below="@+id/tvEmail"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary"
        android:id="@+id/bSummary"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ivPhoto"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:src="@drawable/baloo"
        android:layout_below="@+id/tvSeperator"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
